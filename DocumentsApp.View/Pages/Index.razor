@page "/"
@using DocumentsApp.Data.Dtos.DocumentDtos

<PageTitle>DocumentsApp - Homepage</PageTitle>

<div class="row p-3 ">

    @foreach (var doc in _documentDtos)
    {
        <div class="p-2 col-6 col-md-3 col-lg-2">
            <DocumentCard Document="@doc" />
        </div>
    }

    <div class="p-2 col-6 col-md-3 col-lg-2">
        <AddNewDocumentCard />
    </div>

</div>

@code {

    readonly List<GetDocumentDto> _documentDtos = new List<GetDocumentDto>();

    protected override void OnInitialized()
    {
        var random = new Random().Next(5,15);

        for (int i = 0; i < random; i++)
        {
            _documentDtos.Add(
                new GetDocumentDto()
                {
                    Name = "Lipsum",
                    Content = "lorem ipsum dolor sit amet",
                    Description = "lorem ipsum"
                }
                );
        }
    }

}